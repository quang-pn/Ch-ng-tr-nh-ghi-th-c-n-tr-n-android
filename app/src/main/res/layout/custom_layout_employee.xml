<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_employ"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/nhanvien"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_empl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_employ"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorOrange_Pizazz"/>

    <TextView
        android:id="@+id/tv_empl_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_employ"
        android:layout_below="@+id/tv_empl_name"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorDark"
        />


</RelativeLayout>